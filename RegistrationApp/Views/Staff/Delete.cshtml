@model RegistrationApp.Models.Staff

<form method="post" asp-action="Delete">
    <input asp-for="StaffId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Staff</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="firstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="firstName" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="surName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="surName" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="position"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="position" disabled class="form-control />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit"  class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-controller="Staff" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}