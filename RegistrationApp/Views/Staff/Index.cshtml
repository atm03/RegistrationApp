@model IEnumerable<RegistrationApp.Models.Staff>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Staff List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Staff" asp-action="Create" class="btn btn-primary">
                Create New Staff
            </a>
        </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bodered table-stripped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="25%"> @obj.firstName</td>
                        <td width="25%"> @obj.surName</td>
                        <td width="25%"> @obj.position</td>
                        <td class="text-center">
                            <a asp-controller="Staff" asp-route-Id="@obj.StaffId" asp-action="Edit" class="btn btn-primary">
                                Edit
                            </a>
                            <a asp-controller="Staff" asp-route-Id="@obj.StaffId" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
       <p>Staff list is empty</p>
    }
</div>

