@model IEnumerable<RegistrationApp.Models.Guest>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Guest List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Guest" asp-action="Create" class="btn btn-primary">
                Register New Guest
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bodered table-stripped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        CheckedIn
                    </th>
                    <th>
                        CheckedOut
                    </th>
                    <th>
                        RoomType
                    </th>
                    <th>
                        RoomNum
                    </th>
                    <th>
                        PayedAmt
                    </th>
                    <th>
                        DueAmt
                    </th>
                    <th>
                        TotalAmt
                    </th>
                    <th>
                        EntryBy
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%"> @obj.firstName</td>
                        <td width="25%"> @obj.surName</td>
                        <td width="25%"> @obj.email</td>
                        <td width="25%"> @obj.phoneNumber</td>
                        <td width="25%"> @obj.checkIn</td>
                        <td width="25%"> @obj.checkOut</td>
                        <td width="25%"> @obj.roomType</td>
                        <td width="25%"> @obj.roomNum</td>
                        <td width="25%"> @obj.advancePay</td>
                        <td width="25%"> @obj.duePay</td>
                        <td width="25%"> @obj.totalAmount</td>
                        <td width="25%"> @obj.entryBy</td>
                         <td class="text-center">
                                <a asp-controller="Guest" asp-route-Id="@obj.GuestId" asp-action="Edit" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Guest" asp-route-Id="@obj.GuestId" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Guest list is empty</p>
    }
</div>
